<div class="container-page">
  <div class="container-banner">
    <div class="row" id="row-banner">
      <div class="col-sm-12 col-md-6 title-padding">
        <h1>Pobuddy</h1>
        <h3> <em>A free period tracker!</em></h3>
        <br>
        <a href="#redirect-to-features" class="button">Discover now</a>
      </div>

      <div class="sign-form col-sm-12 col-md-6">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary", id:"btn-color" %>
        </div>
      <% end %>

      <%= render "devise/shared/links", id:"link-color" %>
      </div>
    </div>
  </div>

  <div class="background-image-template">
    <div id="redirect-to-features" class="background-image-features">
      <div class="subtitle-display margin-bottom">
        <h2><em>Learn more about your body on our website, with articles about period:</em></h2>
        <div class="cards-display">
          <div class="card-trip">
              <%= image_tag "speak-bubble-green.png", alt: "alttext" %>
            <div class="card-trip-infos" id="padding-top-card-trip-infos">
              <div>
                <h2 class="card-title-underline">You talk</h2>
                <p>and tell us know how you feel</p>
              </div>
            </div>
          </div>

          <div class="card-trip">
            <%= image_tag "analyse-data-green.png", alt: "alttext", id:"img-size" %>
            <div class="card-trip-infos" id="padding-top-card-trip-infos" >
              <div >
                <h2 class="card-title-underline">We analyze</h2>
                <p>your mood and concerns</p>
              </div>
            </div>
          </div>

          <div class="card-trip">
            <%= image_tag "paper-plane-green.png", alt: "alttext", id:"img-size" %>
            <div class="card-trip-infos" id="padding-top-card-trip-infos">
              <div>
                <h2 class="card-title-underline">We bring</h2>
                <p>you quality and helpful advices !</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


