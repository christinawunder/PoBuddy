<div class="row">
  <div class="col-md-12 text-center">
    <div class="well controls">
      <%= link_to days_path(date: @date - 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-backward"></i>
      <% end %>
      <%= "#{@date.strftime("%B")} #{@date.year}" %>
      <%= link_to  days_path(date: @date + 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-forward"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= calendar @date, @day_by_date do |date| %>
      <%= date.day %>
      <% if @day_by_date[date] %>
        <% @day_by_date[date].each do |day| %>
          <!-- Nikos -->
          <%= link_to " details", day_path(day) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


